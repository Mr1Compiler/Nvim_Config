{
    "languageserver": {
        "clangd": {
            "command": "clangd",
            "rootPatterns": [
                "compile_commands.json",
                ".git"
            ],
            "filetypes": [
                "c",
                "cpp",
                "objc",
                "objcpp"
            ],
            "initializationOptions": {
                "clangdFileStatus": true
            }
        },

    "csharp": {
      "command": "csharp-ls",
      "args": [],
      "filetypes": ["cs"],
      "rootPatterns": ["*.csproj", "*.sln"]
    }
  }
}
